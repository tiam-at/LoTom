#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

#define ZMK_POINTING_DEFAULT_SCRL_VAL 80

/ {
    behaviors {
        scroll_up_down: behavior_sensor_rotate_mouse_wheel_up_down {
            compatible = "zmk,behavior-sensor-rotate";
            label = "ENCODER_MSC_DOWN_UP";
            #sensor-binding-cells = <0>;
            bindings = <&msc SCRL_DOWN>, <&msc SCRL_UP>;

            tap-ms = <20>;
        };

        tab_slide: behavior_sensor_rotate_tab_slide {
            compatible = "zmk,behavior-sensor-rotate";
            label = "ENCODER_TAB_SLIDE";
            #sensor-binding-cells = <0>;
            bindings = <&kp LA(LG(RIGHT_ARROW))>, <&kp LA(LG(LEFT_ARROW))>;

            tap-ms = <20>;
        };
    };

    macros {
        pass: new_macro {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp NUMBER_1 &kp NUMBER_1 &kp NUMBER_2 &kp NUMBER_8 &kp NUMBER_1 &kp NUMBER_2 &kp NUMBER_1 &kp NUMBER_2 &kp ENTER &kp LG(LS(UP_ARROW)) &kp BACKSPACE>;
            label = "NEW_MACRO";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
&kp ESCAPE        &trans
&kp Q             &kp W           &kp E             &kp R       &kp T      &trans   &trans         &kp Y      &kp U         &kp I              &kp O    &kp P
&mt LEFT_SHIFT A  &kp S           &lt 4 D           &lt 3 F     &kp G      &trans   &trans         &kp H      &kp J         &kp K              &lt 2 L  &lt 3 SEMICOLON
&mt LEFT_SHIFT Z  &kp X           &kp C             &kp V       &kp B      &trans   &trans         &kp N      &kp M         &kp COMMA          &kp DOT  &lt 2 SLASH
&kp LEFT_WIN      &kp LEFT_SHIFT  &kp LEFT_CONTROL  &kp ESCAPE  &kp SPACE  &kp TAB  &kp BACKSPACE  &kp ENTER  &lt 2 ESCAPE  &kp RIGHT_BRACKET
            >;

            sensor-bindings = <
                &inc_dec_kp RIGHT_ARROW LEFT_ARROW
                &scroll_up_down
            >;
        };

        MOUSE {
            bindings = <
&trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
            >;

            sensor-bindings = <
                &inc_dec_kp RIGHT_ARROW LEFT_ARROW
                &scroll_up_down
            >;
        };

        SCROLL {
            bindings = <
&trans  &trans
&trans  &kp LA(LG(LEFT_ARROW))  &kp UP_ARROW    &kp LG(LA(RIGHT))        &trans  &trans  &kp DOLLAR     &kp DOLLAR         &kp EXCLAMATION  &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp MINUS
&trans  &kp LEFT                &kp DOWN_ARROW  &kp RIGHT_ARROW          &trans  &trans  &kp AMPERSAND  &kp AMPERSAND      &kp AT_SIGN      &kp LEFT_BRACE        &kp RIGHT_BRACE        &lt 3 SEMICOLON
&trans  &kp LC(LG(LEFT_ARROW))  &trans          &kp LC(LG(RIGHT_ARROW))  &trans  &trans  &trans         &trans             &trans           &kp LESS_THAN         &kp GREATER_THAN       &kp SQT
&trans  &trans                  &trans          &trans                   &trans  &trans  &kp SQT        &kp DOUBLE_QUOTES  &trans           &trans
            >;

            sensor-bindings = <
                &inc_dec_kp RIGHT_ARROW LEFT_ARROW
                &scroll_up_down
            >;
        };

        ARROW {
            bindings = <
&trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans    &trans     &trans     &trans   &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans    &mkp LCLK  &mkp RCLK  &lt 2 L  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &mkp MB3  &trans     &trans     &trans   &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans    &trans     &trans
            >;

            sensor-bindings =
                <&inc_dec_kp RIGHT_ARROW LEFT_ARROW>,
                <&tab_slide>;
        };

        NUM {
            bindings = <
&trans  &trans
&trans  &kp C_VOLUME_DOWN  &trans  &kp C_VOLUME_UP  &trans  &trans  &trans        &kp BACKSLASH    &kp NUMBER_7  &kp NUMBER_8  &kp NUMBER_9  &kp MINUS
&trans  &kp F14            &trans  &kp F15          &trans  &trans  &trans        &kp EXCLAMATION  &kp NUMBER_4  &kp NUMBER_5  &kp NUMBER_6  &kp PLUS
&trans  &trans             &pass   &trans           &trans  &trans  &trans        &kp NUMBER_0     &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp EQUAL
&trans  &trans             &trans  &trans           &kp F8  &trans  &kp ASTERISK  &kp SLASH        &trans        &trans
            >;

            sensor-bindings = <
                &inc_dec_kp RIGHT_ARROW LEFT_ARROW
                &scroll_up_down
            >;
        };

        FUNCTION {
            bindings = <
&trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans   &kp F1  &kp F2  &kp F3   &kp F4  &kp F5
&trans  &trans  &trans  &trans  &trans  &trans  &kp F13  &kp F6  &kp F7  &kp F8   &kp F9  &kp F10
&trans  &trans  &trans  &trans  &trans  &trans  &trans   &trans  &trans  &trans   &trans  &kp F11
&trans  &trans  &trans  &trans  &trans  &trans  &trans   &trans  &trans  &kp F12
            >;

            sensor-bindings = <
                &inc_dec_kp RIGHT_ARROW LEFT_ARROW
                &scroll_up_down
            >;
        };

        BT {
            bindings = <
&trans         &trans
&kp LG(Q)      &kp LC(W)  &trans     &trans     &trans  &trans  &trans  &bt BT_PRV  &bt BT_NXT  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4
&kp LG(LS(Z))  &trans     &kp LC(C)  &trans     &trans  &trans  &trans  &trans      &trans      &trans        &trans        &trans
&kp LG(Z)      &kp LG(X)  &kp LG(C)  &kp LG(V)  &trans  &trans  &trans  &trans      &trans      &trans        &trans        &trans
&trans         &trans     &trans     &trans     &trans  &trans  &trans  &trans      &trans      &trans
            >;

            sensor-bindings = <
                &inc_dec_kp RIGHT_ARROW LEFT_ARROW
                &scroll_up_down
            >;
        };
    };
};
